<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="story">
        <%= link_to user_picture(@story.user), @story.user %>
        <span class="user"><%= link_to @story.user.username, @story.user %></span>
        <span class="timestamp">
          Posted <%= time_ago_in_words(@story.created_at) %> ago.
        </span>
        <span class="cover_image">
          <%= image_tag @story.image %>
        </span>
        <span class="title">
          <%= @story.title %>
        </span>
        <span class="content">
          <%= @story.content %>
        </span>

        <div class="edit delete">
          <% if current_user?(@story.user) %>
            <%= link_to "edit", edit_story(@user) %>
            <%= link_to "delete", @story, method: :delete, data: {confirm: "You sure?"} %>
          <% end %>
        </div>
    </div>
  </div>
</div>
