<% if current_user.likes?(story) %>
  <%= link_to story_like_path(story), method: :delete, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true"></i>
  <% end %>
<% else %>
  <%= link_to story_like_path(story), method: :post, remote: true do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
  <% end %>
<% end %>

<%= story.likes.count %>
