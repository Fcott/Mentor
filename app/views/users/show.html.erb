<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    <%= render 'show_top' %>

  <% if current_user == @user %>
    <ul class="head_lists center">
      <li><%= link_to "Your Stories", user_path(@user), class: "active" %></li>
      <li><%= link_to "Drafts", user_drafts_path(@user), class: "" %></li>
      <li><%= link_to "Saved", user_saving_path(@user), class: "" %></li>
      <li><%= link_to "Profile", user_profile_path(@user), class: "" %></li>
    </ul>

    <ul class="stories">
      <% unless @own_stories.blank? %>
        <%= render @own_stories %>
      <% else %>
        <br>
        <br>
        <p class="center">There are no your stories.</p>
      <% end %>
    </ul>


  <% else %>
  <ul class="head_lists center">
    <li><%= link_to "Stories", user_path(@user), class: "active" %></li>
    <li><%= link_to "Profile", user_profile_path(@user), class: "" %></li>
  </ul>
  <ul class="stories">
    <% unless @own_stories.blank? %>
      <%= render @own_stories %>
    <% else %>
      <br>
      <br>
      <p class="center">There are no your stories.</p>
    <% end %>
  </ul>
  <% end %>

  </div>
