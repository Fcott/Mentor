<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    <div class="user_top">
      <div class="avatar inline-block">
        <%= image_tag user_picture(@user), class: "img-circle pic-middle" %>
        <strong class="user_name"><%= @user.username%></strong>
      </div>
      <% if current_user != @user && user_signed_in? %>
        <div class="contact_button pull-right inline-block">
          <%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

  <% if current_user == @user %>
    <ul class="head_lists">
      <li><%= link_to "Your Stories", user_path(@user), class: "active" %></li>
      <li><%= link_to "Editing Stories", user_editing_stories_path(@user), class: "" %></li>
      <li><%= link_to "Saved Stories", user_saved_stories_path(@user), class: "" %></li>
    </ul>

    <ul class="stories">
      <% if @own_stories.any? %>
        <%= render @own_stories %>
      <% end %>
    </ul>


  <% else %>
    <h4 class="center"><%= "#{@user.username}"%> Stories</h4>
    <ul class="stories">
      <%= render @own_stories %>
    </ul>
  <% end %>

  </div>
