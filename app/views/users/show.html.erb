<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    <div class="user_top">
      <div class="avatar inline-block">
        <%= image_tag user_picture(@user), class: "img-circle pic-middle" %>
        <strong class="user_name"><%= @user.username%></strong>
        <% if @job_categories %>
          <div>
            <% @job_categories.each do |j| %>
              <%= j.name %>
            <% end %>
          </div>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <% if current_user == @user %>
          <div class="contact_button pull-right inline-block">
            <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-info" %>
          </div>
        <% else %>
          <div class="contact_button pull-right inline-block">
            <%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary" %>
          </div>
        <% end %>
      <% end %>
    </div>

  <% if current_user == @user %>
    <ul class="head_lists center">
      <li><%= link_to "Your Stories", user_path(@user), class: "active" %></li>
      <li><%= link_to "Drafts", user_drafts_path(@user), class: "" %></li>
      <li><%= link_to "Saved", user_saving_path(@user), class: "" %></li>
      <li><%= link_to "Profile", user_profile_path(@user), class: "" %></li>
    </ul>

    <ul class="stories">
      <% if @own_stories.any? %>
        <%= render @own_stories %>
      <% else %>
        <br>
        <br>
        <p class="center">There are no your stories.</p>
      <% end %>
    </ul>


  <% else %>
  <ul class="head_lists center">
    <li><%= link_to "Stories", user_path(@user), class: "active" %></li>
    <li><%= link_to "Profile", user_profile_path(@user), class: "" %></li>
  </ul>
    <ul class="stories">
      <%= render @own_stories %>
    </ul>
  <% end %>

  </div>
