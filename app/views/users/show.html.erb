<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    <div class="user_top">
      <div class="avatar">
        <%= image_tag user_picture(@user), class: "img-circle pic-middle" %>
        <strong class="user_name"><%= @user.username%></strong>
      </div>
      <% unless current_user == @user %>
        <div class="row-space-2">
          <%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

  <% if current_user == @user %>
    <ul class="head_lists">
      <li>Your Story</li><li>Editing Story</li><li>Favorite Story</li>
    </ul>
    <ul class="stories">
      <%= render @own_stories %>
    </ul>
  <% else %>
    <h3>Stories</h3>
    <ul class="stories">
      <%= render @own_stories %>
    </ul>
  <% end %>

  </div>
