<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    <div class="user_top">
      <div class="avatar inline-block">
        <span class="table_cell"><%= image_tag user_picture(@user), class: "img-circle pic-middle" %></span>
        <div class="user_info table_cell">
          <div class="user_name"><%= @user.username%></div>
          <% unless @job_categories.blank? %>
            <div>
              <% @job_categories.each do |j| %>
                <%= j.name %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <% if user_signed_in? %>
        <div class="pull-right">
          <% if current_user == @user %>
            <div class="contact_button inline-block">
              <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-info" %>
            </div>
          <% else %>
            <div class="inline-block">
              <%= render 'follow_form', user: @user %>
            </div>
            <div class="contact_button inline-block">
              <%= link_to "Send Message", conversations_path(recipient_id: @user.id), method: 'post', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="stats">
      <a href="<%= followings_user_path(@user) %>">
        <strong id="followings" class="stat">
          <%= @user.followings.count %>
        </strong>
        followings
      </a>
      <a href="<%= followers_user_path(@user) %>">
        <strong id="followers" class="stat">
          <%= @user.followers.count %>
        </strong>
        followers
      </a>
    </div>

  <% if current_user == @user %>
    <ul class="head_lists center">
      <li><%= link_to "Your Stories", user_path(@user), class: "" %></li>
      <li><%= link_to "Drafts", user_drafts_path(@user), class: "" %></li>
      <li><%= link_to "Saved", user_saving_path(@user), class: "" %></li>
      <li><%= link_to "Profile", user_profile_path(@user), class: "active" %></li>
    </ul>

  <% else %>
  <ul class="head_lists center">
    <li><%= link_to "Stories", user_path(@user), class: "" %></li>
    <li><%= link_to "Profile", user_profile_path(@user), class: "active" %></li>
  </ul>

  <% end %>
  <div class="user_profile">
    <div class="profile_div">
      <h4>Self Introduction</h4>
      <span class="p_item"><%= @self_introduction %></span>
    </div>

    <div class="profile_div">
      <h4>Interest</h4>
      <span class="p_item"><%= @interest %></span>
    </div>

    <div class="profile_div">
      <h4>Work Experiences</h4>
      <span class="p_item"><%= @work_experience %></span>
    </div>

    <div class="profile_div">
      <h4>Education</h4>
      <span class="p_item"><%= @education %></span>
    </div>


    <div class="profile_div">
      <h4>Languages</h4>
      <span class="p_item"><%= @languages %></span>
    </div>

    <div class="profile_div">
      <h4>Others</h4>
      <span class="p_item"><%= @others %></span>
    </div>

  </div>
 </div>
</div>
