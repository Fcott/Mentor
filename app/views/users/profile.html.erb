<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    <div class="user_top">
      <div class="avatar inline-block">
        <%= image_tag user_picture(@user), class: "img-circle pic-middle" %>
        <strong class="user_name"><%= @user.username%></strong>
      </div>
      <% if user_signed_in? %>
        <% if current_user == @user %>
          <div class="contact_button pull-right inline-block">
            <%= link_to "Edit Profile", edit_profile_path(@profile), class: "btn btn-info" %>
          </div>
        <% else %>
          <div class="contact_button pull-right inline-block">
            <%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary" %>
          </div>
        <% end %>
      <% end %>
    </div>

  <% if current_user == @user %>
    <ul class="head_lists center">
      <li><%= link_to "Your Stories", user_path(@user), class: "" %></li>
      <li><%= link_to "Drafts", user_drafts_path(@user), class: "" %></li>
      <li><%= link_to "Saved", user_saving_path(@user), class: "" %></li>
      <li><%= link_to "Profile", user_profile_path(@user), class: "active" %></li>
    </ul>

  <% else %>
  <ul class="head_lists center">
    <li><%= link_to "Stories", user_path(@user), class: "" %></li>
    <li><%= link_to "Profile", user_profile_path(@user), class: "active" %></li>
  </ul>

  <% end %>

  <br>
  <div class="user_profile">
    <h4>Self Introduction</h4>
    <%= @self_introduction %>
    <br>

    <h4>Interest</h4>
    <%= @interest %>
    <br>

    <h4>Work Experiences</h4>
    <%= @work_experience %>
    <br>

    <h4>Education</h4>
    <%= @education %>
    <br>

    <h4>Languages</h4>
    <%= @languages %>
    <br>

    <h4>Others</h4>
    <%= @others %>
    <br>
  </div>

  </div>
