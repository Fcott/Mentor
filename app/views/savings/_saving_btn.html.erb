<% if current_user.saving?(story) %>
  <%= link_to saving_path(current_user.savings.find_by(story_id: story.id)), remote: true, method: :delete do %>
    <span class=""><i class="fa fa-bookmark" aria-hidden="true"></i></span>
  <% end %>
<% else %>
  <%= link_to savings_path(story_id: story.id), remote: true, method: :post do %>
    <span class=""><i class="fa fa-bookmark-o" aria-hidden="true"></i></span>
  <% end %>
<% end %>
