<li>
  <%= link_to user_path(notification.actor), anchor: dom_id(notification.notifiable), class: "dropdown-item #{'unread' unless notification.read_at?}" do %>
    <%= image_tag user_picture(notification.actor), class: "img-circle pic-small" %>
    <%= notification.actor.username %>
    <%= notification.action %>
    your <%= notification.notifiable_type.underscore.humanize.downcase %>
  <% end %>
</li>
